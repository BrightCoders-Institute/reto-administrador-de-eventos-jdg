<div class="container">
  <div class="row text-center my-5">
    <h1>PUBLIC EVENTS</h1>
  </div>
  
  <%= link_to "Export CSV", export_events_path(format: :csv), class: "btn btn-primary mb-4" %>

  <table class="table table-striped table-hover table-bordered">
    <thead class="event-list text-center text-white">
      <tr>
        <th scope="col">FLYER</th>
        <th scope="col">TITLE</th>
        <th scope="col">DESCRIPTION</th>
        <th scope="col">DATE</th>
        <th scope="col">LOCATION</th>
        <th scope="col">COST</th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td>
            <% if event.image.attached? %>
              <div class="d-flex justify-content-center">
                <%= image_tag rails_blob_path(event.image, disposition: "attachment", only_path: true),
                              class: "img-thumbnail img-fluid", width: "70", height: "70" %>
              </div>
            <% else %>
              No Image
            <% end %>
          </td>
          <td class="align-middle text-center">
            <%= event.title %>
          </td>
          <td class="align-middle text-center">
            <%= event.description %>
          </td>
          <td class="align-middle text-center">
            <%= event.date %>
          </td>
          <td class="align-middle text-center">
            <%= event.location %>
          </td>
          <td class="align-middle text-center">
            $<%= event.cost %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="pagination justify-content-center">
    <%= will_paginate @events %>
  </div>
</div>
