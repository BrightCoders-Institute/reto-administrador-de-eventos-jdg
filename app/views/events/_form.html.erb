<%= form_with model: @event do |form|%>
  <div class="row mb-3">
    <div class="col-md-12">
      <%= form.label :title, class:"form-label mb-2" %><br>
      <%= form.text_field :title, class: "form-control" %>
      <% @event.errors.full_messages_for(:title).each do |message| %>
        <div class="text-danger"><%= message %></div>
      <% end %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-12">
      <%= form.label :description, class:"form-label mb-2" %><br>
      <%= form.text_area :description, class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-12">
      <%= form.label :date, class:"form-label mb-2" %><br>
      <%= form.date_field :date, class: "form-control" %>
      <% @event.errors.full_messages_for(:date).each do |message| %>
        <div class="text-danger"><%= message %></div>
      <% end %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-12">
      <%= form.label :reminder_date, class:"form-label mb-2" %><br>
      <%= form.date_field :reminder_date, class: "form-control" %>
      <% @event.errors.full_messages_for(:reminder_date).each do |message| %>
        <div class="text-danger"><%= message %></div>
      <% end %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-12">
      <%= form.label :location, class:"form-label mb-2" %><br>
      <%= form.text_area :location, class: "form-control" %>
      <% @event.errors.full_messages_for(:location).each do |message| %>
        <div class="text-danger"><%= message %></div>
      <% end %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-12">
      <%= form.label :cost, class:"form-label mb-2" %><br>
      <%= form.number_field :cost, step: :any, class: "form-control" %>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-md-12">
      <% if @event.image.attached? %>
        <%= image_tag @event.image, style: "width: 200px; display: block" %>
          <label class="mb-4">
            <%= form.check_box :remove_image %>
            REMOVE IMAGE
          </label>
      <% end %>
      <div class="row my-5">
        <%= form.label :image %>
        <%= form.file_field :image, class: "form-control" %>
      </div>
    </div>
  </div>

<div class="field">
  <%= form.label :public %>
  <%= form.select :public, [['Public', true], ['Private', false]] %>
</div>

<div class="text-center">
  <%= form.submit class: "btn btn-primary text-white text-uppercase mg-5" %>
</div>
<% end %>
