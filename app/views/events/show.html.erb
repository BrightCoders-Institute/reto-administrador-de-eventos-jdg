<div class="container">
  <h1>Events</h1>

<table class="table table-striped table-hover ">
  <thead class="table-dark"> 
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Date</th>
      <th scope="col">Location</th>
      <th scope="col">Cost</th>
      <th colspan="2" scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td>
          <%= event.id %>
        </td>
        <td>
          <%= event.title %>
        </td>
        <td>
          <%= event.description %>
        </td>
        <td>
          <%= event.date %>
        </td>
        <td>
          <%= event.location %>
        </td>
        <td>
          $<%= event.cost %>
        </td>
        <td>
          <span class="material-symbols-outlined hover-span"> edit </span>
        </td>
        <td>
          <span class="material-symbols-outlined hover-span"> delete </span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
