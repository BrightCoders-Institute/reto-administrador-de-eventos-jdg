<div class="container">
  <h1>Events</h1>
  <table class="table table-striped table-hover ">
  <thead class="table-dark"> 
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Date</th>
      <th scope="col">Location</th>
      <th scope="col">Cost</th>
      <th colspan="2" scope="col">Actions</th>
      <a class="btn" href="/events/new">New event</a>
    </tr>
  </thead>
  <tbody>
    <% @event.each do |event| %>
      <tr>
        <td>
          <%= event.title %>
        </td>
        <td>
          <%= event.description %>
        </td>
        <td>
          <%= event.date %>
        </td>
        <td>
          <%= event.location %>
        </td>
        <td>
          $<%= event.cost %>
        </td>
        <td>
          <%= link_to "Edit", edit_event_path(event), class: "material-symbols-outlined hover-span" %>
        </td>
        <td>
          <li>
            <%= link_to "Delete", event_path(event), method: :delete, data: {
              turbo_method: :delete,
              turbo_confirm: "Are you sure?"
            }, class: "material-symbols-outlined hover-span" %>
          </li>
          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
